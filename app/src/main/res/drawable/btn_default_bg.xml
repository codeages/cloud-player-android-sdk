<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--第一层阴影-->
    <item android:right="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="20dp" />
            <gradient
                android:angle="270"
                android:centerColor="#334CCCF9"
                android:endColor="@color/white" />
        </shape>
    </item>

    <item android:right="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#334cccf9" />
            <corners android:radius="20dp" />
            <gradient
                android:angle="270"
                android:endColor="#334CCCF9"
                android:startColor="#ff4CCCF9" />
        </shape>
    </item>

    <item android:right="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#334cccf9" />
            <corners android:radius="20dp" />
            <gradient
                android:angle="270"
                android:endColor="#334CCCF9"
                android:startColor="#ff4CCCF9" />
        </shape>
    </item>


    <!--        第二层前景-->
    <item
        android:bottom="2.3dp"
        android:left="1.2dp"
        android:right="1.2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>