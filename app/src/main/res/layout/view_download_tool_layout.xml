<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/download_tools_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/disabled1_hint_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/disabled_hint_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_select_all"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/select_all"
            android:textColor="@color/black_font_color2"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="清除样本"
            android:textColor="@color/primary_red_color1"
            android:textSize="@dimen/normal_font_size" />
    </LinearLayout>
</LinearLayout>