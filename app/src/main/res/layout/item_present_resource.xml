<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_resource_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_download"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/resource_no"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/middle_font_size"
            tools:text="课时 1 :" />

        <TextView
            android:id="@+id/resource_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/btn_download"
            android:layout_toRightOf="@+id/resource_no"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/middle_font_size"
            tools:text="ES权限系统介绍（系统用户角色）" />
    </LinearLayout>

    <com.edusoho.playerdemo.widget.DownloadProgressButton
        android:id="@+id/btn_download"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:visibility="visible" />

</RelativeLayout>